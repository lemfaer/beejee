{% extends "base.twig" %}

{% block title %}
  Create New Task
{% endblock %}

{% block nav_new %}
  <li class="nav-item mr-2">
    <a href="/">
      <button type="button" class="btn btn-dark">&lt;&lt; Go Back</button>
    </a>
  </li>
{% endblock %}

{% block content %}
<form class="col-10 mx-auto" method="POST">
  {% if task is defined %}
    <input type="hidden" name="id" value="{{ task.id }}">
  {% endif %}
  <div class="form-group">
    <label for="form-name">Name</label>
    <input
      type="text"
      class="form-control"
      id="form-name"
      placeholder="John Cena"
      name="name"
      maxlength="255"
      required>
  </div>
  <div class="form-group">
    <label for="form-email">Email address</label>
    <input
      type="email"
      class="form-control"
      id="form-email"
      placeholder="name@example.com"
      name="email"
      maxlength="255"
      required>
  </div>
  <div class="form-group">
    <label for="form-description">Task description</label>
    <textarea
      class="form-control"
      id="form-description"
      rows="3"
      placeholder="Lorem ipsum dolor sit amet."
      name="description"
      maxlength="1000"
      required></textarea>
  </div>
  <div class="form-check">
    <input
      type="checkbox"
      class="form-check-input"
      id="form-executed"
      name="executed">
    <label class="form-check-label" for="form-executed">Task done</label>
  </div>
  <button type="submit" class="btn btn-dark">Submit</button>
</form>
{% endblock %}
